<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"> <!-- Полупрозрачный фон -->

    <!-- Всплывающее окно -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_corners"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:gravity="center">

    <!-- Иконка -->
    <ImageView
        android:id="@+id/icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_support"
        android:contentDescription="@string/support_icon_desc"
        android:layout_gravity="center_horizontal" />

    <!-- Поле для ввода -->
        <EditText
            android:id="@+id/input_field"
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/paint_text_background"
            android:backgroundTint="#FFFFFF"
            android:hint="Введите сообщение"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#BDBDBD" /> <!-- Фон с закругленными углами -->

    <!-- Кнопки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <!-- Кнопка Отправить -->
        <Button
            android:id="@+id/btn_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Отправить"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <!-- Кнопка Отмена -->
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Отмена"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
    </RelativeLayout>
